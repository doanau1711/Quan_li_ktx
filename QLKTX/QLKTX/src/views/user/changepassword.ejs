<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') -%>

</head>

<body>
    <%- include('../partials/leftsidebar') -%>
        <div class="page-wrapper">
            <!-- Top Bar Start -->
            <%- include('../partials/topbar') -%>

                <!-- Top Bar End -->
                <!-- Page Content-->
                <div class="page-content">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Thay đổi mật khẩu</h4>
                        </div>
                        <!--end card-header-->
                        <div class="card-body">
                            <form method="post">
                                <% if (error) { %>
                                    <div class="alert alert-danger border-0" role="alert">
                                        <strong>
                                            <%= error %>
                                        </strong>
                                    </div>
                                    <% } else {%>
                                        <div class="alert border-0" role="alert">
                                            <strong class="text-white">
                                                None
                                            </strong>
                                        </div>
                                        <% } %>
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Mật
                                                    khẩu
                                                    hiện
                                                    tại</label>
                                                <div class="col-lg-9 col-xl-8">
                                                    <input name="currentpass" class="form-control" type="password"
                                                        placeholder="Nhập mật khẩu hiện tại" value="<%= currentpass %>"
                                                        required />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Mật
                                                    khẩu
                                                    mới</label>
                                                <div class="col-lg-9 col-xl-8">
                                                    <input name="newpass" class="form-control" type="password"
                                                        placeholder="Nhập mật khẩu mới" required />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Xác
                                                    nhận
                                                    mật
                                                    khẩu</label>
                                                <div class="col-lg-9 col-xl-8">
                                                    <input name="verifypass" class="form-control" type="password"
                                                        placeholder="Nhập lại mật khẩu mới" required />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-lg-9 col-xl-8 offset-lg-3">
                                                    <button type="submit" class="btn btn-sm btn-outline-primary">Thay
                                                        đổi</button>
                                                    <button onclick="location.href ='/user'"
                                                        class="btn btn-sm btn-outline-danger">Hủy
                                                        bỏ</button>
                                                </div>
                                            </div>
                            </form>
                        </div>
                        <!--end card-body-->

                    </div>
                    <!--end card-->



                    <!-- container -->
                    <footer class="footer text-center text-sm-start">
                        ©
                        <script>
                            document.write(new Date().getFullYear())
                        </script>
                        2021 Dastone <span class="text-muted d-none d-sm-inline-block float-end">Crafted
                            with <i class="mdi mdi-heart text-danger"></i> by Mannatthemes
                        </span>
                    </footer>
                    <!--end footer-->
                </div>
                <!-- end page content -->
        </div>
        <%- include('../partials/footer') -%>

</body>

</html>