<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') -%>
        <style>
            .btnDelete,
            .btnEdit {
                font-size: 15px;
            }

            .btnDelete {
                color: red;
            }

            .btnEdit {
                color: #1761fd;
            }

            *[id$=errors] {
                color: red;
                font-style: italic;
            }

            .modal {
                display: none;
                position: fixed;
                z-index: 1;
                padding-top: 100px;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                overflow: auto;
                background-color: rgb(0, 0, 0);
                background-color: rgba(0, 0, 0, 0.4);
            }

            .modal-content {
                background-color: #fefefe;
                margin: auto;
                border-radius: 4px;
                width: 20%;
            }

            .table th {
                font-size: medium;
                font-weight: 1000;
            }

            h1 {
                text-align: center;
            }

            h4 {
                font-weight: 1000;
            }
        </style>

</head>

<body>
    <%- include('../partials/leftsidebar') -%>
        <div class="page-wrapper">
            <!-- Top Bar Start -->
            <%- include('../partials/topbar') -%>
                <!-- Top Bar End -->
                <!-- Page Content-->
                <div class="page-content">

                    <div class="card">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h4 class="card-title">Thông tin sinh viên</h4>
                                </div>
                                <!--end col-->
                            </div>
                            <!--end row-->
                        </div>
                        <!--end card-header-->
                        <div class="card-body">


                            <form method="post">
                                <div class="form-group row">
                                    <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Mã
                                        SV</label>
                                    <div class="col-lg-9 col-xl-8">
                                        <input name="masv" class="form-control" type="text" readonly="true"
                                            value="<%= sv.masv %>" required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Lớp</label>
                                    <div class="col-lg-9 col-xl-8">
                                        <input name="lop" class="form-control" type="text" value="<%= sv.lop %>"
                                            required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Họ và
                                        tên</label>
                                    <div class="col-lg-9 col-xl-8">
                                        <input name="hoten" class="form-control" type="text" value="<%= sv.hoten %>"
                                            required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Số CMND</label>
                                    <div class="col-lg-9 col-xl-8">
                                        <input name="cmnd" class="form-control" type="text" value="<%= sv.cmnd %>"
                                            required />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Giới
                                        tính</label>
                                    <div class="col-lg-9 col-xl-8">
                                        <select name="quyentk">
                                            <% if (sv.gioitinh=="Nam" ){ %>
                                                <option value="Nam" selected>Nam</option>
                                                <option value="Nữ">Nữ</option>
                                                <% } else{ %>
                                                    <option value="Nữ" selected>Nữ</option>
                                                    <option value="Nam">Nam</option>
                                                    <% } %>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Ngày
                                        sinh</label>
                                    <div class="col-lg-9 col-xl-8">
                                        <input name="ngaysinh" class="form-control" type="date"
                                            value="<%= sv.ngaysinh %>" required />
                                    </div>
                                </div>
                                <!-- <div class="form-group row">
                                    <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Địa
                                        chỉ</label>
                                    <div class="col-lg-9 col-xl-8">
                                        <input name="diachi" class="form-control" type="text" value="<%= sv.diachi %>"
                                            required />
                                    </div>
                                </div> -->
                                <div class="form-group row">
                                    <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Số điện
                                        thoại</label>
                                    <div class="col-lg-9 col-xl-8">
                                        <input name="sdt" class="form-control" type="text" value="<%= sv.sdt %>"
                                            required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Số điện
                                        thoại người thân</label>
                                    <div class="col-lg-9 col-xl-8">
                                        <input name="sdtnguoithan" class="form-control" type="text"
                                            value="<%= sv.sdtnguoithan %>" required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-xl-3 col-lg-3 text-end mb-lg-0 align-self-center">Email</label>
                                    <div class="col-lg-9 col-xl-8">
                                        <input name="email" class="form-control" type="email" value="<%= sv.mailsv %>"
                                            required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-9 col-xl-8 offset-lg-3">
                                        <button type="submit" class="btn btn-sm btn-outline-primary">Thay
                                            đổi</button>
                                        <button onclick="location.href ='/ktx'"
                                            class="btn btn-sm btn-outline-danger">Hủy
                                            bỏ</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!--end card-body-->
                    </div>
                    <!--end card-->
                    <div class="card">


                        <div class="card-body">
                            <!-- id="datatable" -->
                            <h4>Danh sách hợp đồng</h4>
                            <table id="datatable"
                                class="table table-bordered dt-responsive nowrap table-striped table-hover"
                                style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Mã hợp đồng</th>
                                        <th>Ngày lập</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Ngày kết thúc</th>
                                        <th>Số phòng</th>
                                        <th>Nhân viên lập</th>
                                        <th>Trạng thái</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ... -->
                                    <% for(let i=0; i < dshd.length; i++){ %>
                                        <tr>
                                            <td>
                                                <%= dshd[i].MAHOPDONG %>
                                            </td>
                                            <td>
                                                <%= dshd[i].NGAYLAP %>
                                            </td>
                                            <td>
                                                <%= dshd[i].NGAYBATDAUHD %>
                                            </td>
                                            <td>
                                                <%= dshd[i].NGAYKETTHUCHD %>
                                            </td>
                                            <td>
                                                <%= dshd[i].SOPHONG %>
                                            </td>
                                            <td>
                                                <%= dshd[i].HOTENNV %>
                                            </td>
                                            <td>
                                                <%= dshd[i].TRANGTHAIHUY %>

                                            </td>
                                            <td>
                                                <% if(dshd[i].TRANGTHAIHUY=='Còn hiệu lực' ) { %>

                                                    <a style="color: black;"
                                                        href="/ktx/sinhvien/huyhd/<%= dshd[i].MAHOPDONG %>"><i
                                                            class="ti-close"></i></a>
                                                    <% } %>

                                            </td>
                                        </tr>

                                        <% } %>

                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card">


                        <!--end card-header-->
                        <div class="card-body">
                            <!-- id="datatable" -->
                            <h4>Danh sách biên bản</h4>
                            <table id="datatable"
                                class="table table-bordered dt-responsive nowrap table-striped table-hover"
                                style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Nhân viên lập</th>
                                        <th>Lý do</th>
                                        <th>Ngày ghi nhận</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- ... -->
                                    <% for(let i=0; i < dsbb.length; i++){ %>
                                        <tr>
                                            <td>
                                                <%= dsbb[i].manv %>
                                            </td>
                                            <td>
                                                <%= dsbb[i].lydo %>
                                            </td>
                                            <td>
                                                <%= dsbb[i].ngayghinhan %>
                                            </td>
                                        </tr>

                                        <% } %>

                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- container -->
                    <footer class="footer text-center text-sm-start">
                        ©
                        <script>
                            document.write(new Date().getFullYear())
                        </script>

                        2021 Dastone <span class="text-muted d-none d-sm-inline-block float-end">Crafted
                            with <i class="mdi mdi-heart text-danger"></i> by Mannatthemes
                        </span>
                    </footer>
                    <!--end footer-->
                </div>
                <!-- end page content -->
        </div>
        <%- include('../partials/footer') -%>

</body>

</html>